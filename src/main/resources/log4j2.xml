<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Properties>
        <Property name="basePath">./logs</Property>
    </Properties>
    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>
        <RollingFile name="RolloverFileAppender"
            filePattern="${basePath}/$${date:yyyy-MM-dd}/%d{MM-dd-yyyy}_%i.log"
            immediateFlush="true" 
            append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %n%msg%n%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
        </RollingFile>
        <RollingFile name="AuditRolloverFileAppender"
                     filePattern="${basePath}/audit-$${date:yyyy-MM-dd}/audit-%d{MM-dd-yyyy}_%i.log"
                     immediateFlush="true"
                     append="true">
        <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %n%msg%n%n"/>
        <Policies>
            <TimeBasedTriggeringPolicy />
            <SizeBasedTriggeringPolicy size="10 MB"/>
        </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="all">
            <AppenderRef ref="ConsoleAppender" level="error"/>
            <AppenderRef ref="RolloverFileAppender" level="warn"/>
            <AppenderRef ref="AuditRolloverFileAppender" level="all" />
        </Root>
    </Loggers>
</Configuration>
